<div class="container-fluid">
  <p id="notice"><%= notice %></p>


<%= form_tag import_projects_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="map-content">
        <h1>Illinois Green Projects</h1>
      </div>
      <% @projects.each do |project| %>
      <p>
        <h3><%= project.project_name %></h3>
        <%= project.address %><br>
        <%= project.latitude %><br>
        <%= project.longitude %><br>
        <%= project.buildings_assignment %><br>
        <%= project.building_type %><br>
        <%= project.project_status %><br>
        <%= project.date %><br>
        <%= project.impact %><br>
        <%= link_to 'Show', project %> |
        <%= link_to 'Edit', edit_project_path(project) %> |
        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
        <% end %>

    </div>
    <div class="col-md-8">
      <%= tag.div nil, id: 'map', data: { projects: @projects.to_json(methods: [:address]), l: params[:l] } %>
      <%= link_to "Redo search in this area", "#", id: "redo-search" %>
      <p>
        <%= link_to 'New Project', new_project_path %>
      </p>
    </div>
  </div>



  <h1>Projects</h1>

  <table>
    <thead>
      <tr>
        <th>Project name</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Buildings assignment</th>
        <th>Building type</th>
        <th>Project status</th>
        <th>Date</th>
        <th>Impact</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.project_name %></td>
          <td><%= project.address %></td>
          <td><%= project.latitude %></td>
          <td><%= project.longitude %></td>
          <td><%= project.buildings_assignment %></td>
          <td><%= project.building_type %></td>
          <td><%= project.project_status %></td>
          <td><%= project.date %></td>
          <td><%= project.impact %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>




</div>
